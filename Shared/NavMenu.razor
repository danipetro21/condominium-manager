@using Microsoft.AspNetCore.Components.Authorization

<MudNavMenu>
    <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="pa-4">Menu</MudText>
    
    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
                Dashboard
            </MudNavLink>

            <MudNavGroup Title="Gestione" Icon="@Icons.Material.Filled.ManageAccounts" Expanded="true">
                <MudNavLink Href="/condominiums" Icon="@Icons.Material.Filled.Business">
                    Condomini
                </MudNavLink>
                <MudNavLink Href="/expenses" Icon="@Icons.Material.Filled.Receipt">
                    Spese
                </MudNavLink>
                <MudNavLink Href="/messages" Icon="@Icons.Material.Filled.Message">
                    I Miei Messaggi
                </MudNavLink>
            </MudNavGroup>

            <AuthorizeView Roles="Admin">
                <Authorized Context="adminAuth">
                    <MudNavGroup Title="Amministrazione" Icon="@Icons.Material.Filled.AdminPanelSettings">
                        <MudNavLink Href="/admin/users" Icon="@Icons.Material.Filled.People">
                            Gestione Utenti
                        </MudNavLink>
                        <MudNavLink Href="/admin/messages" Icon="@Icons.Material.Filled.Message">
                            Messaggi
                        </MudNavLink>
                    </MudNavGroup>
                </Authorized>
            </AuthorizeView>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>
